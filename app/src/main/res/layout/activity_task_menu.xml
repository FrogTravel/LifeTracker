<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskMenuActivity">

    <ImageButton
        android:id="@+id/forwardImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        app:srcCompat="@drawable/ArrowButton"
        android:paddingLeft="220dp"
        android:paddingTop="240dp" />


    <ImageButton
        android:id="@+id/deleteImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        app:srcCompat="@drawable/TrashButton"
        android:paddingLeft="60dp"
        android:paddingTop="80dp"/>

    <ImageButton
        android:id="@+id/markImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        app:srcCompat="@drawable/MarkButton"
        android:paddingLeft="220dp"
        android:paddingTop="80dp"/>

    <ImageButton
        android:id="@+id/editImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        app:srcCompat="@drawable/PencilButton"
        android:paddingLeft="60dp"
        android:paddingTop="240dp" />
</android.support.constraint.ConstraintLayout>